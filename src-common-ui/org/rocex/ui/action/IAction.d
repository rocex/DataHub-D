module org.rocex.ui.action.IAction;

import java.lang.String;
import org.eclipse.swt.widgets.Event;
import org.eclipse.swt.widgets.Item;
import org.rocex.ui.Context;

/***************************************************************************
 * <br>
 * @author Rocex Wang
 * @version 2019-05-09 22:07:25
 ***************************************************************************/
public interface IAction
{
    /***************************************************************************
     * @param item
     * @author Rocex Wang
     * @version 2019-5-14 22:01:56
     ***************************************************************************/
    void addBindingItem(Item item);

    /***************************************************************************
     * @author Rocex Wang
     * @version 2020-6-11 22:24:29
     ***************************************************************************/
    void afterAction();

    /***************************************************************************
     * @author Rocex Wang
     * @version 2019-05-09 22:16:15
     ***************************************************************************/
    void beforeAction();

    /***************************************************************************
     * @author Rocex Wang
     * @version 2020-7-6 22:09:43
     ***************************************************************************/
    void dispose();

    /***************************************************************************
     * @author Rocex Wang
     * @version 2020-6-11 22:00:19
     ***************************************************************************/
    void finallyAction();

    /***************************************************************************
     * @return for Ctrl+Z, use SWT.CTRL | 'Z'
     * @author Rocex Wang
     * @version 2019-5-13 22:35:50
     ***************************************************************************/
    int getAccelerator();

    /***************************************************************************
     * @return 绑定的所有item，包括按钮和菜单项
     * @author Rocex Wang
     * @version 2019-5-14 22:02:41
     ***************************************************************************/
    Item[] getBindingItems();

    /***************************************************************************
     * @return Context
     * @author Rocex Wang
     * @version 2019-7-13 22:56:02
     ***************************************************************************/
    Context getContext();

    /***************************************************************************
     * @return String
     * @author Rocex Wang
     * @version 2019-05-09 22:16:38
     ***************************************************************************/
    String getIconPath();

    /***************************************************************************
     * @return String
     * @author Rocex Wang
     * @version 2019-05-09 22:59:55
     ***************************************************************************/
    String getId();

    /***************************************************************************
     * @return String
     * @author Rocex Wang
     * @version 2019-05-09 22:16:35
     ***************************************************************************/
    String getText();

    /***************************************************************************
     * @return String
     * @author Rocex Wang
     * @version 2019-05-09 22:16:33
     ***************************************************************************/
    String getToolTip();

    /***************************************************************************
     * @return boolean
     * @author Rocex Wang
     * @version 2019-05-09 22:16:31
     ***************************************************************************/
    bool isEnabled();

    /***************************************************************************
     * @param item
     * @author Rocex Wang
     * @version 2020-7-4 22:56:29
     ***************************************************************************/
    void removeBindingItem(Item item);

    /***************************************************************************
     * @param event
     * @author Rocex Wang
     * @version 2019-05-09 22:16:29
     ***************************************************************************/
    void run(Event event);

    /***************************************************************************
     * for Ctrl+Z, use SWT.CTRL | 'Z'
     * @param keycode
     * @author Rocex Wang
     * @version 2019-5-13 22:32:22
     ***************************************************************************/
    void setAccelerator(int keycode);

    /***************************************************************************
     * @param context
     * @author Rocex Wang
     * @version 2019-7-13 22:55:29
     ***************************************************************************/
    void setContext(Context context);

    /***************************************************************************
     * @param blEnabled
     * @author Rocex Wang
     * @version 2019-05-09 22:16:27
     ***************************************************************************/
    void setEnabled(bool blEnabled);

    /***************************************************************************
     * @param strIconPath
     * @author Rocex Wang
     * @version 2019-05-09 22:16:25
     ***************************************************************************/
    void setIconPath(String strIconPath);

    /***************************************************************************
     * @param strId
     * @author Rocex Wang
     * @version 2019-5-13 22:15:07
     ***************************************************************************/
    void setId(String strId);

    /***************************************************************************
     * @param strText
     * @author Rocex Wang
     * @version 2019-05-09 22:16:21
     ***************************************************************************/
    void setText(String strText);

    /***************************************************************************
     * @param strToolTip
     * @author Rocex Wang
     * @version 2019-05-09 22:16:19
     ***************************************************************************/
    void setToolTip(String strToolTip);
}
